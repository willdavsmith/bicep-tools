{
  "name": "@radius-project/manifest-to-bicep-extension",
  "version": "0.0.1-alpha",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/radius-project/bicep-tools.git"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "yarn@4.5.2",
  "files": [
    "dist/"
  ],
  "main": "dist/bundle.js",
  "bin": {
    "manifest-to-bicep": "bin.js"
  },
  "bundledDependencies": [
    "bicep-types",
    "yaml",
    "yargs"
  ],
  "dependencies": {
    "bicep-types": "file:../../bicep-types/src/bicep-types",
    "yaml": "^2.6.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/yargs": "^17.0.33",
    "nexe": "^4.0.0-rc.7"
  },
  "scripts": {
    "build": "webpack",
    "build:binary": "yarn build:binary:linux && yarn build:binary:linux-musl && yarn build:binary:macos && yarn build:binary:windows",
    "build:binary:linux": "nexe dist/bundle.js -t linux-x64-20.18.1 -o dist/manifest-to-bicep-extension-linux-x64 --build",
    "build:binary:linux-musl": "nexe dist/bundle.js -t alpine-x64-20.18.1 -o dist/manifest-to-bicep-extension-linux-musl-x64 --build",
    "build:binary:macos": "yarn build:binary:macos-x64 && yarn build:binary:macos-arm64",
    "build:binary:macos-x64": "nexe dist/bundle.js -t darwin-x64-20.18.1 -o dist/manifest-to-bicep-extension-darwin-x64",
    "build:binary:macos-arm64": "nexe dist/bundle.js -t darwin-arm64-20.18.1 -o dist/manifest-to-bicep-extension-darwin-arm64",
    "build:binary:windows": "nexe dist/bundle.js -t windows-x64-20.18.1 -o dist/manifest-to-bicep-extension-win-x64.exe",
    "publish": "npm publish",
    "prepublishOnly": "yarn build",
    "version": "npm pkg set version=${0}"
  }
}
